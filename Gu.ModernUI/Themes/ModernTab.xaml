<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Gu.ModernUI.Windows.Controls"
                    xmlns:modernUi="clr-namespace:Gu.ModernUI">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Gu.ModernUI;component/Assets/Converters.xaml" />
        <ResourceDictionary Source="/Gu.ModernUI;component/Assets/ListBox.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style x:Key="LinksListBoxStyle"
           BasedOn="{StaticResource {x:Type ListBox}}"
           TargetType="{x:Type ListBox}">
        <Setter Property="SelectedValue" Value="{Binding SelectedSource, RelativeSource={RelativeSource AncestorType={x:Type modernUi:ModernTab}}}" />
        <Setter Property="SelectedValuePath" Value="Source" />
        <Setter Property="ItemsSource" Value="{Binding Links, RelativeSource={RelativeSource AncestorType={x:Type modernUi:ModernTab}}}" />
        <Setter Property="SelectionMode" Value="Single" />
    </Style>

    <Style TargetType="modernUi:ModernTab">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type modernUi:ModernTab}">
                    <DockPanel>
                        <!--  link list  -->
                        <ListBox x:Name="LinkList"
                                 DockPanel.Dock="Top"
                                 ScrollViewer.CanContentScroll="False"
                                 ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                 ScrollViewer.PanningMode="Both"
                                 ScrollViewer.VerticalScrollBarVisibility="Hidden"
                                 Style="{StaticResource LinksListBoxStyle}">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                                    <Setter Property="FontFamily" Value="Segoe UI" />
                                    <Setter Property="FontSize" Value="15" />
                                    <Setter Property="FontWeight" Value="Bold" />
                                    <Setter Property="TextOptions.TextFormattingMode" Value="Ideal" />
                                    <Setter Property="Foreground" Value="{DynamicResource MenuText}" />
                                    <Setter Property="Margin" Value="12,0,0,0" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                <ContentPresenter x:Name="Presenter"
                                                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="true">
                                                        <Setter Property="Foreground" Value="{DynamicResource MenuTextHover}" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="true">
                                                        <Setter Property="Foreground" Value="{DynamicResource MenuTextSelected}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>

                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type modernUi:Link}">
                                    <TextBlock Text="{Binding DisplayName, Converter={StaticResource ToUpperConverter}}" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <!--  content  -->
                        <modernUi:ModernFrame x:Name="ModernFrame"
                                              ContentLoader="{TemplateBinding ContentLoader}"
                                              Source="{Binding SelectedSource,
                                                               RelativeSource={RelativeSource AncestorType={x:Type modernUi:ModernTab}},
                                                               Mode=TwoWay}" />
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <Style.Triggers>
            <Trigger Property="Layout" Value="List">
                <Trigger.Setters>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="modernUi:ModernTab">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="{TemplateBinding ListWidth}" />
                                        <ColumnDefinition Width="9" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <!--  link list  -->
                                    <ListBox x:Name="LinkList"
                                             ScrollViewer.HorizontalScrollBarVisibility="{TemplateBinding ScrollViewer.HorizontalScrollBarVisibility}"
                                             Style="{StaticResource LinksListBoxStyle}">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate DataType="{x:Type modernUi:Link}">
                                                <TextBlock Margin="10,2,2,2"
                                                           FontSize="{DynamicResource SmallFontSize}"
                                                           Text="{Binding DisplayName,
                                                                          Converter={StaticResource ToUpperConverter}}"
                                                           TextTrimming="CharacterEllipsis" />
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>

                                    <!--  seperator  -->
                                    <Rectangle Grid.Column="1"
                                               Width="1"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Stretch"
                                               Fill="{DynamicResource SeparatorBackground}" />

                                    <!--  content  -->
                                    <modernUi:ModernFrame Grid.Column="2"
                                                          Margin="32,0,0,0"
                                                          ContentLoader="{TemplateBinding ContentLoader}"
                                                          Source="{Binding SelectedSource,
                                                                           RelativeSource={RelativeSource TemplatedParent},
                                                                           Mode=TwoWay}" />
                                </Grid>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Trigger.Setters>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>