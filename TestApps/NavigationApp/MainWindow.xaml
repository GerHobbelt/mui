<!-- ReSharper disable UnusedMember.Global -->
<mui:ModernWindow x:Class="NavigationApp.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:mui="https://github.com/JohanLarsson/Gu.Wpf.ModernUI"
                  Title="MainWindow"
                  Width="525"
                  Height="350"
                  mc:Ignorable="d"
                  ContentSource="/View2.xaml">
    <mui:ModernWindow.TitleLinks>
        <mui:Link x:Name="TitleLink1" DisplayName="View1" Source="/View1.xaml" />
        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" />
        <mui:Link x:Name="TitleLink2" DisplayName="View2" Source="/View2.xaml" />
    </mui:ModernWindow.TitleLinks>
    
    <mui:ModernWindow.MainMenu >
        <mui:Link x:Name="Link1" DisplayName="View1" Source="/View1.xaml" />
        <mui:Link x:Name="Link2" DisplayName="View2" Source="/View2.xaml" />
        <!--<mui:LinkGroup DisplayName="Group1">
            <mui:Link DisplayName="View1" Source="/View1.xaml" />
            <mui:Link DisplayName="View2" Source="/View2.xaml" />
        </mui:LinkGroup>-->
    </mui:ModernWindow.MainMenu>
</mui:ModernWindow>

