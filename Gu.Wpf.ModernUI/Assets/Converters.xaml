<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mui="clr-namespace:Gu.Wpf.ModernUI">

    <mui:BooleanToFontWeightConverter x:Key="BooleanToFontWeightConverter"
                                      WhenFalse="Normal"
                                      WhenNull="Normal"
                                      WhenTrue="Bold" />
    <mui:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"
                                      WhenFalse="Collapsed"
                                      WhenNull="Collapsed"
                                      WhenTrue="Visible" />
    <mui:NullToVisibilityConverter x:Key="NullToVisibilityConverter"
                                   Else="Visible"
                                   WhenNull="Collapsed" />
    <mui:NullOrEmptyStringToVisibilityConverter x:Key="NullOrEmptyStringToVisibilityConverter"
                                                Else="Visible"
                                                WhenNullOrEmpty="Collapsed" />
    <mui:ToUpperConverter x:Key="ToUpperConverter" />
    <mui:ToLowerConverter x:Key="ToLowerConverter" />

</ResourceDictionary>