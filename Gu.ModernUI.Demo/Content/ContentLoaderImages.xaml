<UserControl x:Class="Gu.ModernUI.Demo.Content.ContentLoaderImages"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:app="clr-namespace:Gu.ModernUI.Demo"
             xmlns:controls="clr-namespace:Gu.ModernUI.Windows.Controls;assembly=Gu.ModernUI"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:demo="clr-namespace:Gu.ModernUI.Demo"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <controls:ModernTab x:Name="Tab"
                            Layout="List"
                            ListWidth="200">
            <controls:ModernTab.ContentLoader>
                <demo:FlickrImageLoader />
            </controls:ModernTab.ContentLoader>
        </controls:ModernTab>

        <controls:BBCodeBlock Grid.Row="1"
                              Margin="{StaticResource StatusMargin}"
                              BBCode="Powered by [url=http://flickr.com]Flickr[/url]"
                              Foreground="{DynamicResource WindowTextReadOnly}" />
    </Grid>
</UserControl>
