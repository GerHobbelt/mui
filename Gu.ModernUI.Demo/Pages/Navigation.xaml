<UserControl x:Class="Gu.ModernUI.Demo.Pages.Navigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:app="clr-namespace:Gu.ModernUI.Demo"
             xmlns:controls="clr-namespace:Gu.ModernUI.Windows.Controls;assembly=Gu.ModernUI"
             xmlns:navigation="clr-namespace:Gu.ModernUI.Windows.Navigation;assembly=Gu.ModernUI"
             xmlns:demo="clr-namespace:Gu.ModernUI.Demo"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <Grid.Resources>
            <!-- define an implicit BBCodeBlock style and add custom commands to the link navigator -->
            <Style TargetType="controls:BBCodeBlock" >
                <Setter Property="LinkNavigator">
                    <Setter.Value>
                        <navigation:DefaultLinkNavigator>
                            <navigation:DefaultLinkNavigator.Commands>
                                <demo:SampleDisabledCommand x:Key="cmd://disabled" />
                                <demo:SampleMsgBoxCommand x:Key="cmd://msgbox" />
                                <demo:SampleParameterCommand x:Key="cmd://parameter" />
                            </navigation:DefaultLinkNavigator.Commands>
                        </navigation:DefaultLinkNavigator>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <ScrollViewer>
            <StackPanel >
                <controls:BBCodeBlock BBCode="Demonstrating the use of link navigators with support for loading frame content, external link navigation and command execution. A link navigator implements the [b]ILinkNavigator[/b] interface and is typically associated with a [b]BBCodeBlock[/b]. The links below are supported by the [b]Gu.ModernUI.DefaultLinkNavigator[/b]." Margin="0,0,0,16" />

                <TextBlock Text="CONTENT NAVIGATION" Style="{StaticResource Heading2}" />
                <controls:BBCodeBlock xml:space="preserve">» navigate to the [url=/Pages/Introduction.xaml]introduction page[/url]
» navigate to [url=http://www.google.com]http://www.google.com[/url] in the default browser
» send an email to [url=mailto:foo@test.com?subject=This%20is%20the%20subject&amp;body=This%20is%20the%20body]foo@test.com[/url]
                </controls:BBCodeBlock>
                <TextBlock Text="BUILTIN COMMANDS" Style="{StaticResource Heading2}" />
                <controls:BBCodeBlock xml:space="preserve">» set the theme to [url=cmd://darktheme]dark[/url], [url=cmd://lighttheme]light[/url] or use a [url=cmd://settheme|/ModernUIDemo;component/Assets/ModernUI.HelloKitty.xaml]custom theme[/url]
» set the font size to [url=cmd://largefontsize]large[/url] or [url=cmd://smallfontsize]small[/url]
» change the accent color to [url=cmd://accentcolor|#ff4500]orange[/url], [url=cmd://accentcolor|#339933]green[/url] or whatever [url=cmd://accentcolor|#9a0213]color you like[/url]
» navigate to the previous page using the [url=cmd://browseback]browse back[/url] command
                </controls:BBCodeBlock>
                <TextBlock Text="CUSTOM COMMANDS" Style="{StaticResource Heading2}" />
                <controls:BBCodeBlock xml:space="preserve">» show a [url=cmd://msgbox]message box[/url]
» a command that cannot execute, resulting in a [url=cmd://disabled]disabled hyperlink[/url]
» passing a parameter to a [url=cmd://parameter|my%20parameter]command[/url]
                    
Visit the [url=http://mui.codeplex.com/documentation]online documentation[/url] to learn more about [b]ILinkNavigator[/b].
                </controls:BBCodeBlock>
                <TextBlock Text="NAVIGATELINK ROUTED COMMAND" Style="{StaticResource Heading2}" />
                <controls:BBCodeBlock xml:space="preserve">The [b]LinkCommands.NavigateLink[/b] routed command adds support for link navigation to any control that supports commanding, not just BBCodeBlock. The routed command is implemented by ModernWindow, which uses the ModernWindow.LinkNavigator to perform the actual navigation.
                </controls:BBCodeBlock>
                
                <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                    <Button Content="introduction" Margin="0,0,4,0"
                            Command="navigation:LinkCommands.NavigateLink"
                            CommandParameter="/Pages/Introduction.xaml"/>
                    <Button Content="google" Margin="0,0,4,0"
                            Command="navigation:LinkCommands.NavigateLink"
                            CommandParameter="http://www.google.com"/>
                    <Button Content="dark theme" Margin="0,0,4,0"
                            Command="navigation:LinkCommands.NavigateLink"
                            CommandParameter="cmd://darktheme" />
                    <Button Content="custom theme" Margin="0,0,4,0"
                            Command="navigation:LinkCommands.NavigateLink"
                            CommandParameter="cmd://settheme|/ModernUIDemo;component/Assets/ModernUI.HelloKitty.xaml" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
