<UserControl x:Class="Gu.Wpf.ModernUI.Demo.Pages.ContentLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mui="http://gu.com/ModernUI"
             d:DesignHeight="300"
             mc:Ignorable="d">
    <mui:ModernTab Orientation="Horizontal" SelectedSource="/Content/ContentLoaderIntro.xaml">
        <mui:Link DisplayName="INTRO" Source="/Content/ContentLoaderIntro.xaml" />
        <mui:Link DisplayName="IMAGES" Source="/Content/ContentLoaderImages.xaml" />
        <mui:Link DisplayName="Lorem ipsum" Source="/Content/LoremIpsumList.xaml" />
        <mui:Link DisplayName="Slow page" Source="/Content/SlowPage.xaml" />
        <mui:Link DisplayName="Slow page no caching" Source="/Content/SlowPageNoCache.xaml" />
    </mui:ModernTab>
</UserControl>
